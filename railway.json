{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "watchPatterns": ["backend/**"],
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "python -m uvicorn app.main:app --host 0.0.0.0 --port $PORT",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5
  }
}
